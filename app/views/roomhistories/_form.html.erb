<%= form_for(@roomhistory) do |f| %>
    <%= render 'shared/error_messages', object: @roomhistory%>


    <br><br><%= f.label "Select a room" %><br>
        <%= f.select :number, options_for_select(Room.all.pluck(:number)) %>
    <br><br>
    <%= f.label :password %><br>
    <%= f.password_field :password, class: 'form-control' %>
    <br><br>
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation, class: 'form-control' %>



    <br><br>
    <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>