<h1>The Library Application</h1>
<br><br>
<%= link_to "Home", current_member %>
<span style="display:inline-block; width: 3%;"></span>
<%= link_to 'Log out', logout_path %>

<br><br>
<% provide(:button_text, 'Book') %>



<% @room.each do |r| %>
    <tr>
      <td><%= r.size %></td>
      <td><%= r.building %></td>
      <td><%= r.number %></td>
         <td>
        <%= form_for(Roomhistory.new, remote: true, format: :js, url: {controller: "roomhistories", action: "create"}) do |f| %>
            <%= f.datetime_select :time_from, :ampm => true %>
            <%= f.hidden_field :number, value: r.id %>
            <%= f.hidden_field :userid, value: current_member.id %>
            <%= f.submit  "Book" %>
   <br><br>     <% end %>
      </td>
    </tr>
<% end %>